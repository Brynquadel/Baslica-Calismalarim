<UserControl x:Class="COED.Interfaces.Define"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:COED.Interfaces"
             mc:Ignorable="d" 
             d:DesignHeight="230" d:DesignWidth="500" Width="500" Height="230">
    <Border Background="#e6e6e6" BorderThickness="1" BorderBrush="#d3d3d3">
        <StackPanel>

            <DockPanel>
                <WrapPanel HorizontalAlignment="Left">
                    <Label Name="deflabel" Content="Uyarı" Padding="12,0,0,0" VerticalContentAlignment="Center" Foreground="#262626" FontSize="16" FontFamily="Roboto" FontWeight="Regular" Height="40"></Label>
                </WrapPanel>
                <WrapPanel HorizontalAlignment="Right">
                    <Button Name="defexitbtn" HorizontalAlignment="Right" Height="40" Width="40" Style="{DynamicResource ButonStyle}">
                        <DockPanel Width="13" Height="13">
                            <Image Source="/Images/exit.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                        </DockPanel>
                    </Button>
                </WrapPanel>
            </DockPanel>



        </StackPanel>
    </Border>
</UserControl>
