                        </WrapPanel>
                    </MenuItem.Header>
                    <MenuItem Header="Kitaplar" Click="MenuItem_Click_6"></MenuItem>
                    <MenuItem Header="Yeni Kitap" Click="MenuItem_Click"/>
                    <MenuItem Header="Seçili Ögeler">
                        <MenuItem Header="Görüntüle" Click="MenuItem_Click_2"/>
